@model SignalRChat.Models.user


<h1>Login Here</h1>

<div class="d-flex justify-content-center">
    <div class="card shadow-lg p-4 bg-light col-lg-4">
        <h3 class="text-center mb-4">Login</h3>
        <form asp-action="Login" asp-controller="Home" method="post">

            <div class="mb-3">
                <label for="userId" class="form-label fw-bold">User ID:</label>
                <input asp-for="userId" class="form-control" id="useridInput" placeholder="Enter User ID" />
                <span asp-validation-for="userId" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label for="password" class="form-label fw-bold">Password:</label>
                <input asp-for="password" type="password" class="form-control" placeholder="Enter your password" required />
                <span asp-validation-for="password" class="text-danger"></span>
            </div>

            <div class="d-grid">
                <input type="submit" value="Login" class="btn btn-primary btn-block">
            </div>

        </form>
    </div>
</div>


@if(ViewBag.Message != null)
{
    <div class="alert alert-danger col-lg-3">
       @ViewBag.Message
    </div>
}

